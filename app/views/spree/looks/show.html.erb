<div data-hook="look_show" itemscope itemtype="http://schema.org/Product">
  <% @body_id = 'look-details' %>

  <div class="columns nine alpha" data-hook="look_left_part">
    <div class="row" data-hook="look_left_part_wrap">

      <div id="look-images" data-hook="look_images">
        <div id="main-image" data-hook>
          <%= render :partial => 'image' %>
        </div>
        <div id="look_products" data-hook>
          <%#= render :partial => 'look_products' %>
        </div>
      </div>

      <div data-hook="product_properties">
        <%#= render :partial => 'properties' %>
      </div>
    
    </div>
  </div>

  <div class="columns seven omega" data-hook="look_right_part">
    <div class="row" data-hook="look_right_part_wrap">
      <%= render :partial => 'look_products' %>

      <div id="look-product-description" data-hook="look_product_description">

        <h1 class="product-title" itemprop="name"><%#= accurate_title %></h1>

        <div itemprop="description" data-hook="description">
          <%#= product_description(@product) rescue t(:product_has_no_description) %>
        </div>

        <div id="cart-form" data-hook="cart_form">
          <%#= render :partial => 'cart_form' %>
        </div>

      </div>

      <%#= render :partial => 'taxons' %>

    </div>
  </div>
</div>
