<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @sale_image } %>

<%= render :partial => 'spree/admin/shared/lookbook_tabs', :locals => { :current => 'Lookbook Images' } %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t('spree.lookbook.link.back'), [:admin, @lookbook_collection, @lookbook], :icon => 'icon-arrow-left', :id => 'admin_lookbook_looks_link' %>
    <%= button_link_to t('spree.lookbook.link.edit'), [:edit, :admin, @lookbook_collection, @lookbook], :icon => 'icon-edit', :id => 'admin_lookbooks_link' %>
  </li>
<% end %>

<%= form_for [:admin, @lookbook_collection, @lookbook, @lookbook_image], :html => { :multipart => true } do |f| %>
  <fieldset data-hook="edit_image">
    <legend align="center"><%= @lookbook_image.attachment_file_name%></legend>
    <div data-hook="thumbnail" class="field alpha three columns align-center">
      <%= f.label t(:thumbnail) %><br>
      <%= link_to image_tag(@lookbook_image.attachment.url(:small)), @lookbook_image.attachment.url(:product) %>
    </div>
    <div class="nine columns omega">
      <%= render :partial => 'form', :locals => { :f => f } %>  
    </div>
    <div class="clear"></div>
    <div class="form-buttons filter-actions actions" data-hook="buttons">
      <%= button t(:update), 'icon-refresh' %>
      <span class="or"><%= t(:or) %></span>
        <%= link_to_with_icon 'icon-remove', t(:cancel), [:admin, @lookbook_collection, @lookbook, :lookbook_images], :id => 'cancel_link', :class => 'button' %>
    </div>
  </fieldset>
<% end %>
