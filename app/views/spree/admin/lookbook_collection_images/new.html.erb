<%= render :partial => 'spree/admin/shared/lookbook_tabs', :locals => { :current => 'Images' } %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t('spree.lookbook.link.back_to_lookbook_collections'), admin_lookbook_collections_url, :icon => 'icon-arrow-left', :id => 'admin_lookbooks_link' %>
    <%= button_link_to t('spree.lookbook.link.edit'), edit_admin_lookbook_collection_url(@lookbook_collection), :icon => 'icon-edit', :id => 'admin_lookbook_collections_link' %>
  </li>
<% end %>

<%= form_for @lookbook_collection_image, :url => [:admin, @lookbook_collection, :lookbook_collection_images], :html => { :multipart => true } do |f| %>
  <fieldset data-hook="new_image" >
    <legend align="center"><%= t(:new_image) %></legend>

      <%= render :partial => 'form', :locals => { :f => f } %>
    
      <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button t(:save), 'icon-refresh' %>
        <span class="or"><%= t(:or) %></span>
        <%= link_to_with_icon 'icon-remove', t(:cancel), edit_admin_lookbook_collection_url(@lookbook_collection), :id => 'cancel_link', :class => 'button' %>
      </div>
  </fieldset>
<% end %>

