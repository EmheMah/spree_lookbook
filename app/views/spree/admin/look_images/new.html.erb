
<% content_for :page_actions do %>
  <li>
    <%= button_link_to t('spree.look.link.back'), admin_lookbook_collection_lookbook_looks_url(@lookbook_collection, @lookbook), :icon => 'icon-arrow-left', :id => 'admin_looks_link' %>
    <%= button_link_to t('spree.look.link.edit'), edit_admin_lookbook_collection_lookbook_look_url(@lookbook_collection, @lookbook, @look), :icon => 'icon-edit', :id => 'admin_active_sales_link' %>
  </li>
<% end %>

<%= form_for @look_image, :url => [:admin, @lookbook_collection, @lookbook, @look, :look_images], :html => { :multipart => true } do |f| %>
  <fieldset data-hook="new_image" >
    <legend align="center"><%= t(:new_image) %></legend>

      <%= render :partial => 'form', :locals => { :f => f } %>
    
      <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button t(:save), 'icon-refresh' %>
        <span class="or"><%= t(:or) %></span>
        <%= link_to_with_icon 'icon-remove', t(:cancel), [:admin, @lookbook_collection, @lookbook, @look, :look_images], :id => 'cancel_link', :class => 'button' %>
      </div>
  </fieldset>
<% end %>

