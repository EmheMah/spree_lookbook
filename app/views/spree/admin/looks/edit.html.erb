<% content_for :page_title do %>
  <%= t('spree.look.title.edit') %> &#62; <%= @lookbook.name %> &#62; <%= @look.name %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t('spree.lookbook_collection.link.back_to_lookbook_collections'), admin_lookbook_collections_url, :icon => 'icon-arrow-left', :id => 'admin_lookbook_events_link' %>
    <%= button_link_to t('spree.lookbook.link.edit'), [:edit, :admin, @lookbook_collection, @lookbook], :icon => 'icon-edit', :id => 'admin_lookbook_events_link' %>
    <%= button_link_to t('spree.look.link.new'), new_admin_lookbook_collection_lookbook_look_url(@lookbook_collection, @lookbook), :icon => 'icon-plus', :id => 'new_admin_lookbook_event_link' %>
  </li>
<% end %>

<% if @look.errors.present? %>
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @look } %>
<% end %>

<%= form_for @look, :url => admin_lookbook_collection_lookbook_look_url(@lookbook_collection, @lookbook, @look), :html => { :multipart => true } do |f| %>
  <fieldset data-hook="edit_look" class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <div class="clear"></div>
    <div class="form-buttons filter-actions actions" data-hook="buttons">
      <%= button t(:update), 'icon-refresh' %>
      <span class="or"><%= t(:or) %></span>
        <%= link_to_with_icon 'icon-remove', t(:cancel), [:admin, @lookbook_collection, @lookbook, :looks], :id => 'cancel_link', :class => 'button' %>
    </div>
  </fieldset>
<% end %>
