<% content_for :page_title do %>
  <%= t('spree.lookbook_collection.title.edit') %> "<%= @lookbook_collection.name %>"
<% end %>

<%= render :partial => 'spree/admin/shared/lookbook_tabs', :locals => { :current => 'Lookbook Collection Details' } %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t('spree.lookbook_collection.link.back_to_lookbook_collections'), collection_url, :icon => 'icon-arrow-left', :id => 'admin_new_lookbook_collection_link' %>
    <%= button_link_to t('spree.lookbook.link.new'), new_admin_lookbook_collection_lookbook_url(@lookbook_collection.permalink), :icon => 'icon-plus', :id => 'admin_lookbook_collections_link' %>
  </li>
<% end %>

<div data-hook="admin_lookbook_collection_edit_form">
  <div id="active-sale-form-wrapper">
    <%= render :partial => 'form' %>
  </div>
</div>
